<div class="col mb-5">
  <div class="card h-100">
    <!-- Product image-->
    <img class="card-img-top" src="<%= product.image_url %>" height='198' alt="..." />
    <!-- Product details-->
    <div class="card-body p-4">
      <div class="text-center">
        <!-- Product name-->
        <h5 class="fw-bolder"><%= product.name %></h5>
        <!-- Product price-->
        $<%= product.price %>
      </div>
    </div>
    <!-- Product actions-->
    <div class="card-footer p-4 pt-0 border-top-0 bg-transparent">
      <div class="text-center">
        <%= button_to 'Add to cart', line_items_path, method: :post, params: { line_item: { product_id: product.id } }, class: 'btn btn-primary mt-auto' %>
      </div>
    </div>
  </div>
</div>
